<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace属性是名称空间，必须唯一 -->
<mapper namespace="com.github.mybatisdq.demo.student.mapper.StudentMapper">

    <!-- resultMap标签:映射实体与表
         type属性：表示实体全路径名
         id属性：为实体与表的映射取一个任意的唯一的名字
    -->
    <resultMap type="com.github.mybatisdq.demo.student.entity.Student" id="studentMap">
        <!-- id标签:映射主键属性
             result标签：映射非主键属性
             property属性:实体的属性名
             column属性：表的字段名
        -->
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="score" column="score"/>
        <result property="grade" column="grade"/>
        <result property="gender" column="gender"/>
    </resultMap>
    <insert id="add" parameterType="com.github.mybatisdq.demo.student.entity.Student" useGeneratedKeys="true" keyProperty="id">
        insert into students(name,gender,grade,score)
        values (#{name},#{gender},#{grade},#{score})
    </insert>
    <update id="update">
        update students set name = #{name},gender = #{gender},grade = #{grade},score = #{score}
        where id = #{id}
    </update>
    <delete id="deleteById">
        delete from students where id = #{id}
    </delete>
    <select id="queryById" resultMap="studentMap">
        select * from students where id = #{id}
    </select>
    <select id="queryAll" resultType="com.github.mybatisdq.demo.student.entity.Student">
        select * from students
    </select>

</mapper>